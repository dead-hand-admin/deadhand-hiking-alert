# Запретить прямой доступ к PHP файлам кроме index.php
<FilesMatch "\.php$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Разрешить только index.php
<Files "index.php">
    Order Allow,Deny
    Allow from all
</Files>

# Запретить доступ к директориям
Options -Indexes

# Перенаправление всех запросов через index.php
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Если файл/директория существует — отдавать как есть
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Иначе — через index.php
    RewriteRule ^ index.php [L]
</IfModule>

# Защита служебных файлов
<FilesMatch "^(\.env|config\.php|composer\.(json|lock))$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Запрет доступа к logs
RedirectMatch 403 ^/logs/.*$

# Кеширование статики
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
</IfModule>